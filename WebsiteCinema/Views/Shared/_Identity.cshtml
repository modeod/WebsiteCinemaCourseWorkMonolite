@inject UserManager<ApplicationUser> UserManager;

@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item dropdown show">
        <a class="btn nav-link dropdown-toggle" type="button" id="profile-btn" data-bs-toggle="dropdown"
                aria-expanded="false">
                <i class="bi bi-person-badge"></i> Hello, @UserManager.GetUserName(User)
        </a>
        <ul class="dropdown-menu" aria-labelledby="profile-btn">
            <li>
                <a class="dropdown-item" asp-controller="Orders" asp-action="OrdersList">
                    <i class="bi bi-list"></i> Orders
                </a>
            </li>
        </ul>
    </li>
    <span style="padding: 5px"></span>

    <li class="nav-item text-nowrap">
        <form asp-controller="Account" asp-action="Logout">
            <button class="btn btn-outline-danger my-2 my-sm-0">
                <i class="bi bi-box-arrow-right"></i> Log out
            </button>
        </form>
    </li>
}
else
{
    <li class="nav-item text-nowrap">
        <a class="btn nav-link btn-outline-success my-2 my-sm-0" asp-controller="Account" asp-action="Login">
            <i class="bi bi-box-arrow-right"></i> Log In
        </a>
    </li>
    <li class="nav-item text-nowrap">
        <a class="btn nav-link btn-outline-success my-2 my-sm-0" asp-controller="Account" asp-action="Register">
            <i class="bi bi-person-plus"></i> Register
        </a>
    </li>
}